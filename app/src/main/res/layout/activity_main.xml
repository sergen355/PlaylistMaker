<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    style="@style/MainScreenLayoutStyle">

    <FrameLayout style="@style/MainHeaderLayoutStyle"
        android:padding="@dimen/padding">

        <TextView
            style="@style/HeaderStyle"
            android:layout_width="match_parent"
            android:layout_gravity="start"
            android:paddingBottom="@dimen/header_padding_bottom"
            android:text="@string/app_name"

            android:textColor="@color/yp_white" />
    </FrameLayout>

    <LinearLayout style="@style/WindowLayoutStyle"
        android:padding="@dimen/padding">

        <Button
            android:id="@+id/search"
            style="@style/MainButtonStyle"
            android:text="@string/search"

            app:icon="@drawable/search" />

        <Button
            android:id="@+id/media"
            style="@style/MainButtonStyle"
            android:text="@string/medialibrary"

            app:icon="@drawable/library" />

        <Button
            android:id="@+id/settings"
            style="@style/MainButtonStyle"
            android:text="@string/settings"

            app:icon="@drawable/settings" />

    </LinearLayout>
</LinearLayout>