<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blue"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingBottom="@dimen/header_padding_bottom"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text_size" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:orientation="vertical">

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/button_margin_bottom"
            android:layout_weight="@dimen/button_layout_weight"
            android:backgroundTint="@color/white"
            android:text="@string/search"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text_size"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/pm_search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/button_margin_bottom"
            android:layout_weight="@dimen/button_layout_weight"
            android:backgroundTint="@color/white"
            android:text="@string/medialibrary"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text_size"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/pm_library"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/button_margin_bottom"
            android:layout_weight="@dimen/button_layout_weight"
            android:backgroundTint="@color/white"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text_size"
            app:cornerRadius="@dimen/button_corner_radius"
            app:icon="@drawable/pm_settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/black" />

        />

    </LinearLayout>
</LinearLayout>