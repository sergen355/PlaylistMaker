<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    tools:ignore="LabelFor"

    style="@style/MainLayoutStyle">

    <FrameLayout
        style="@style/MainHeaderLayoutStyle"
        >

        <ImageView
            android:id="@+id/back"
            android:contentDescription="@string/back_button"

            style="@style/BackButtonStyle"
            />

        <TextView
            android:text="@string/search"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="55dp"

            style="@style/HeaderStyle"/>

    </FrameLayout>

    <LinearLayout
        style="@style/WindowLayoutStyle">

        <FrameLayout
            style="@style/SearchLineBoxStyle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <EditText
                android:id="@+id/edit_text"

                style="@style/SearchLineStyle"
                />

            <ImageView
                android:id="@+id/clear_icon"
                android:contentDescription="@string/clear_button"

                style="@style/CloseButtonImageViewStyle"
                 />
        </FrameLayout>

        <ImageView
            android:id="@+id/placeholder_image"

            android:contentDescription="@string/placeholder_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@null"
            android:visibility="gone"
            android:layout_marginTop="102dp"
            />

        <TextView
            android:id="@+id/placeholder_message"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp"

            style="@style/PlaceholderTextStyle"
            />

        <Button
            android:id="@+id/placeholder_button"
            android:visibility="gone"
            android:layout_marginTop="16dp"

            style="@style/UpdateButton"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/track_recycler_view"

            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <TextView
        android:id="@+id/placeholder_history_text"
        style="@style/TrackMeta"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="@string/history_search"
        android:textSize="19sp"
        android:textFontWeight="500"
        android:gravity="center"
        android:fontFamily="@font/ys_display_medium"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        style="@style/UpdateButton"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear_history_button"
        app:cornerRadius="54dp"
        android:text="@string/clear_history"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:fontFamily="@font/ys_display_medium"
        />


</LinearLayout>


    </LinearLayout>