<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:layout_weight">@dimen/button_layout_weight</item>

        <item name="android:backgroundTint">@color/yp_white</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="MainScreenLayoutStyle" parent="MainLayoutStyle">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <style name="MainLayoutStyle">
        <item name="android:background">@color/yp_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="MainHeaderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeaderColorStyle">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="HeaderStyle" parent="HeaderColorStyle">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WindowLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BackButtonStyle">
        <item name="android:layout_width">@dimen/layout_back_arrow</item>
        <item name="android:layout_height">@dimen/layout_back_arrow</item>
        <item name="android:src">@drawable/pm_left_arrow</item>
    </style>

    <style name="ListElementStyle">
        <item name="android:paddingVertical">@dimen/padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListElementTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ListElementImageViewStyle">
        <item name="android:layout_width">@dimen/settings_icon_horizontal</item>
        <item name="android:layout_height">@dimen/settings_icon_vertical</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="SearchLineStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:layout_weight">@dimen/button_layout_weight</item>

        <item name="android:backgroundTint">@color/yp_gray</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

</resources>